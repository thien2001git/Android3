<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ThongKeTheoThoiGianActivity"
    android:background="@drawable/shape_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn cột xếp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_1" />

        <Spinner
            android:id="@+id/sp_chon_cot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn kiểu"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_1"/>

        <Spinner
            android:id="@+id/sp_chon_kieu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

    </LinearLayout>
<!--    <ir.androidexception.datatable.DataTable-->
<!--        android:id="@+id/tb_data"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_width="match_parent"-->
<!--        />-->

<!--    <TextView-->
<!--        android:id="@+id/tv_tb_data"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->

    <WebView
        android:id="@+id/wv_tb_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9254de"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_1"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_table"
        android:background="#fff1f0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_2"/>
</LinearLayout>